<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#E0E0E0"
    android:id="@+id/main_layout">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rel_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollview"
            android:padding="5dp"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outterLayout"
                android:gravity="center_horizontal">

                // Ruppin banner

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/banner_ruppin"
                    android:layout_marginTop="5dp"
                    card_view:cardElevation="3dp"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginBottom="0dp"

                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fffdfdfe">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView"
                            android:src="@drawable/ruppin"
                            android:contentDescription="RuppinLogo"
                            android:padding="5dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/card_view"
                    android:layout_below="@+id/banner_ruppin"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="3dp"
                        card_view:cardCornerRadius="10dp"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#FFFFFF">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/guessEditText"
                                android:layout_gravity="center_horizontal"
                                android:hint="@string/EditTextInput"
                                android:layout_marginRight="50dp"
                                android:layout_marginLeft="50dp"
                                android:gravity="center_horizontal"
                                android:maxLength="4"
                                android:layout_marginTop="10dp" />
                                <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:id="@+id/ratinglayout"
                                android:layout_gravity="center_horizontal">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:paddingRight="18dp">

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ratingBarHits"
                                        android:numStars="4"
                                        android:isIndicator="true"
                                        android:clickable="false"
                                        style="?android:attr/ratingBarStyleSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="Hits"
                                        android:id="@+id/hitsTextView"
                                        android:layout_marginLeft="10dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal">

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ratingBarAlmost"
                                        android:numStars="4"
                                        android:isIndicator="true"
                                        android:clickable="false"
                                        style="?android:attr/ratingBarStyleSmall"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="Almost"
                                        android:id="@+id/almostTextView"
                                        android:layout_marginLeft="10dp" />
                                </LinearLayout>

                            </LinearLayout>

                                <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center_horizontal">

                                <com.beardedhen.androidbootstrap.BootstrapButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btnSub"
                                    android:id="@+id/buttonSubmit"
                                    android:layout_gravity="center_horizontal"
                                    android:enabled="false"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="5dp"
                                    bootstrap:bb_type="default"
                                    bootstrap:bb_roundedCorners="true"
                                    bootstrap:bb_size="small"
                                    />

                                <com.beardedhen.androidbootstrap.BootstrapButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reset"
                                    android:id="@+id/buttonReset"
                                    bootstrap:bb_type="default"
                                    bootstrap:bb_roundedCorners="true"
                                    bootstrap:bb_size="small"
                                    />
                            </LinearLayout>

                            </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardViewTotal"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardBackgroundColor="#008080"
                        android:layout_margin="1dp"
                        android:layout_alignParentLeft="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textViewNumGuesses"
                            android:text="Total:"
                            android:gravity="center_horizontal"
                            android:textColor="#ffffffff"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardViewLast"
                        android:layout_toRightOf="@+id/cardViewTotal"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardBackgroundColor="#008080"
                        android:layout_margin="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textViewLastGuess"
                            android:text="Last:"
                            android:gravity="center_horizontal"
                            android:textColor="#ffffffff"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cardViewLast"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardBackgroundColor="#008080"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textViewBestGuesses"
                            android:text="Best:"
                            android:gravity="center_horizontal"
                            android:textColor="#ffffffff"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>

                    </android.support.v7.widget.CardView>

                    <!--<android.support.v7.widget.CardView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--card_view:cardElevation="5dp"-->
                        <!--card_view:cardBackgroundColor="@android:color/transparent"-->
                        <!--card_view:cardCornerRadius="1000dp"-->
                        <!-->-->
                        <!--<LinearLayout-->
                            <!--android:orientation="horizontal"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/tag_layout"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:layout_marginRight="10dp"-->
                            <!-->-->

                            <!---->

                        <!--</LinearLayout>-->

                        <!--</android.support.v7.widget.CardView>-->

                    <!--<android.support.v7.widget.CardView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--card_view:cardElevation="5dp"-->
                        <!--card_view:cardCornerRadius="5dp"-->
                        <!--card_view:cardBackgroundColor="#008080"-->
