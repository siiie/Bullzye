<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#E0E0E0"
    android:id="@+id/main_layout">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rel_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollview"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:padding="4dp"
            android:fillViewport="false">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outterLayout"
                android:gravity="center_horizontal">

                // Ruppin banner

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/banner_ruppin"
                    android:layout_marginTop="5dp"
                    card_view:cardElevation="3dp"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginBottom="0dp"

                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fffdfdfe">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView"
                            android:src="@drawable/ruppin"
                            android:contentDescription="RuppinLogo"
                            android:padding="5dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                // Game control

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/card_view"
                    android:layout_below="@+id/banner_ruppin"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="3dp"
                        card_view:cardCornerRadius="10dp"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#FFFFFF">

                                <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/guessEditText"
                                android:layout_gravity="center_horizontal"
                                android:hint="@string/EditTextInput"
                                android:layout_marginRight="50dp"
                                android:layout_marginLeft="50dp"
                                android:gravity="center_horizontal"
                                android:maxLength="4"
                                android:layout_marginTop="10dp" />



                                <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:id="@+id/ratinglayout"
                                android:layout_gravity="center_horizontal">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:paddingRight="18dp">

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ratingBarHits"
                                        android:numStars="4"
                                        android:isIndicator="true"
                                        android:clickable="false"
                                        style="?android:attr/ratingBarStyleSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="Hits"
                                        android:id="@+id/hitsTextView"
                                        android:layout_marginLeft="10dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal">

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ratingBarAlmost"
                                        android:numStars="4"
                                        android:isIndicator="true"
                                        android:clickable="false"
                                        style="?android:attr/ratingBarStyleSmall"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:text="Almost"
                                        android:id="@+id/almostTextView"
                                        android:layout_marginLeft="10dp" />
                                </LinearLayout>

                            </LinearLayout>

                                <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center_horizontal">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btnSub"
                                    android:id="@+id/buttonSubmit"
                                    android:layout_gravity="center_horizontal"
                                    android:enabled="false"
                                    android:layout_marginBottom="5dp"
                                    />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reset"
                                    android:id="@+id/buttonReset" />
                            </LinearLayout>

                            </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="3dp"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardBackgroundColor="#008080"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:elevation="5dp">

                         <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tag_layout"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentTop="false"
                                android:layout_marginTop="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textViewNumGuesses"
                                    android:layout_weight="0.33"
                                    android:text="Total:"
                                    android:gravity="center_horizontal"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textViewLastGuess"
                                    android:layout_weight="0.33"
                                    android:text="Last:"
                                    android:gravity="center_horizontal"
                                    android:textColor="#ffffffff" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textViewBestGuesses"
                                    android:layout_weight="0.33"
                                    android:text="Best:"
                                    android:gravity="center_horizontal"
                                    android:textColor="#ffffffff" />
                            </LinearLayout>

                     </android.support.v7.widget.CardView>

                </RelativeLayout>

                // Rules layout

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_view"
                    android:text="Rules"
                    bootstrap:bb_roundedCorners="true"
                    bootstrap:bb_size="default"
                    bootstrap:bb_type="success"
                    bootstrap:bb_icon_left="fa-university"
                    android:id="@+id/rulesButtonCSS"
                    android:layout_marginBottom="10dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rulesButtonCSS"
                    android:text="About"
                    bootstrap:bb_roundedCorners="true"
                    bootstrap:bb_size="default"
                    bootstrap:bb_type="primary"
                    bootstrap:bb_icon_left="fa-info"
                    android:id="@+id/aboutButtonCSS" />

            </RelativeLayout>

        </ScrollView>

        <com.software.shell.fab.ActionButton
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            fab:button_color="@color/fab_material_grey_900"
            fab:button_colorPressed="@color/fab_material_teal_900"
            fab:show_animation="@anim/abc_fade_in"
            fab:hide_animation="@anim/fab_fade_out"
            fab:image="@drawable/fab_exit_icon_white"
            fab:shadow_radius="5.0dp"
            fab:shadow_xOffset="2dp"
            fab:shadow_yOffset="4.0dp"
            fab:shadow_color="#757575"
            />


    </RelativeLayout>


</LinearLayout>
